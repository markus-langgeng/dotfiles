#!/usr/bin/env sh

FILE="Screenshot_$(date +'%Y-%m-%d-%H%M%S')_$(uuidgen | cut -d- -f1).png"
if [ "$1" = "-s" ]; then
    # grim -g "$(slurp -d)" - | wl-copy -t image/png
    slurp | grim -g - - | tee "$HOME/personal/sync_files/OPPO-A31/DCIM/Screenshots/$FILE" | wl-copy
else
    # grim - | wl-copy -t image/png
    grim - | tee "$HOME/personal/sync_files/OPPO-A31/DCIM/Screenshots/$FILE" | wl-copy -t image/png
fi
